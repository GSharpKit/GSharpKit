+      HIThemeMenuItemDrawInfo draw_info;
+
+      draw_info.version = 0;
+      draw_info.itemType = kind | kThemeMenuItemNoBackground;
+      draw_info.state = state;
+
+      HIThemeDrawMenuItem ((HIRect*) &rect,
