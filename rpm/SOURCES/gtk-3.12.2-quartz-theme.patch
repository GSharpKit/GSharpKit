+  GtkCssImageClass *image_class = GTK_CSS_IMAGE_CLASS (klass);
+
+  image_class->draw = gtk_css_image_quartz_draw;
+  image_class->parse = gtk_css_image_quartz_parse;
+  image_class->print = gtk_css_image_quartz_print;
+}
