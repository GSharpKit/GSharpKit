FROM fedora:@FEDORA_VERSION@
MAINTAINER Mikkel Kruse Johnsen <mikkel@xmedicus.com>

RUN rpm -Uvh http://yum.gsharpkit.org/gsharpkit/fedora-@FEDORA_VERSION@-x86_64/RPMS/GSharpKit-release-@VERSION@-@RELEASE@.fc@FEDORA_VERSION@.noarch.rpm

ADD packages/darwinx-*.noarch.rpm /tmp/
RUN rpm -Uvh --nodeps --ignoreos /tmp/darwinx-*.noarch.rpm && rm -f /tmp/darwinx-*.noarch.rpm

RUN dnf -y install sudo hunspell-da hunspell-en-GB hunspell-en-US mono-core-6.8.0.123 mono-extras-6.8.0.123 mono-locale-extras-6.8.0.123 mono-data-6.8.0.123 mono-data-sqlite-6.8.0.123 mono-web-6.8.0.123 mono-wcf-6.8.0.123 mono-mvc-6.8.0.123 mono-winfxcore-6.8.0.123 GSharpKit-runtime GSharpKit-sdk GSharpKit-sdk-darwinx && dnf clean all && rm -rf /var/cache/dnf

RUN mkdir /Library/Frameworks/GSharpKit/share/myspell ; cp /usr/share/myspell/da_DK.aff /usr/share/myspell/da_DK.dic /usr/share/myspell/en_GB.aff /usr/share/myspell/en_GB.dic /usr/share/myspell/en_US.aff /usr/share/myspell/en_US.dic /Library/Frameworks/GSharpKit/share/myspell/

